@page
@model TelegramBotEngine.Pages.CreateBotModel
@{
    ViewData["Title"] = "Create a new bot";
}

<div class="container py-4">
    <h1 class="h3 mb-4 fw-normal">Create a new bot</h1>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

    <form method="post" class="row g-3 needs-validation" novalidate>
        <div class="col-md-8">
            <div class="mb-3">
                <label asp-for="Bot.Name" class="form-label fw-medium"></label>
                <input asp-for="Bot.Name"
                       class="form-control"
                       placeholder="e.g. My Store Bot" />
                <span asp-validation-for="Bot.Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Bot.Token" class="form-label fw-medium"></label>
                <input asp-for="Bot.Token"
                       class="form-control"
                       placeholder="123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11" />
                <span asp-validation-for="Bot.Token" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Bot.WebhookUrl" class="form-label fw-medium"></label>
                <input asp-for="Bot.WebhookUrl"
                       class="form-control"
                       placeholder="https://mysite.com/telegram/webhook" />
                <div class="form-text">
                    Leave empty to use polling
                </div>
                <span asp-validation-for="Bot.WebhookUrl" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           asp-for="Bot.UsePulling"
                           id="usePulling"
                           checked>
                    <label class="form-check-label fw-medium" for="usePulling">
                        Use polling (fetch updates)
                    </label>
                </div>
            </div>

            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-success btn-lg px-5">
                    Create bot
                </button>
                <a asp-page="/Index" class="btn btn-outline-secondary btn-lg">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}