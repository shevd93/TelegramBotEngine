@page
@model CommandHandlersModel
@{
    ViewData["Title"] = "Command handlers";
}

<h1>Command handlers @Model.BotName</h1>
<a href="/CreateNewCommandHandler?id=@Model.BotId">Create a new command handler</a>

<div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

<table class="table">
    <thead>
        <tr>
            <th>External ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Active</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var handler in Model.Handlers)
        {
            <tr>
                <td>@handler.ExternalId</td>
                <td>@handler.Name</td>
                <td>@handler.Type</td>
                <td>@(handler.IsActive ? "Yes":"No")</td>
                <td>
                    <form asp-page="EditHandler" method="get">
                        <input type="hidden" name="id" value="@handler.Id" />
                        <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                    </form>
                </td>
                <td>
                    <form asp-page-handler="DeleteHandler" method="post">
                        <input type="hidden" name="id" value="@handler.Id"/>
                        <input type="hidden" name="botid" value="@Model.BotId"/>
                        <button type="submit" class="btn btn-sm" style="background-color: red; border-color: #b02a37">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


